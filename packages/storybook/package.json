{
  "name": "@fusionary/storybook-config",
  "version": "5.1.2",
  "private": false,
  "description": "Baseline storybook config used and maintained by Fusionary.",
  "repository": {
    "type": "git",
    "url": "https://github.com/fusionary/web-configs.git",
    "directory": "packages/storybook"
  },
  "license": "MIT",
  "author": "Fusionary <developers@fusionary.com> (https://fusionary.com)",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./main": "./src/main.ts",
    "./preview": "./src/preview.ts",
    "./style.css": "./src/styles/index.css"
  },
  "files": [
    "dist",
    "src/styles/index.css"
  ],
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "parcel watch",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ./.prettierignore",
    "lint": "eslint .",
    "prepack": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@fusionary/prettier-config",
  "dependencies": {
    "@storybook/addon-a11y": "^8.6.3",
    "@storybook/addon-actions": "^8.6.3",
    "@storybook/addon-designs": "^8.2.0",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/addon-interactions": "^8.6.3",
    "@storybook/addon-links": "^8.6.3",
    "@storybook/addon-onboarding": "^8.6.3",
    "@storybook/addon-viewport": "^8.6.3",
    "@storybook/blocks": "^8.6.3",
    "@storybook/experimental-nextjs-vite": "^8.6.3",
    "@storybook/react": "^8.6.3",
    "@storybook/test": "^8.6.3",
    "@storybook/types": "^8.6.3",
    "postcss-loader": "^8.1.1",
    "storybook": "^8.6.3"
  },
  "devDependencies": {
    "@fusionary/eslint-config": "workspace:*",
    "@fusionary/prettier-config": "workspace:*",
    "@fusionary/tsconfig": "workspace:*",
    "@parcel/config-default": "^2.13.3",
    "@parcel/transformer-typescript-types": "^2.13.3",
    "@types/node": "^20.17.22",
    "@types/react": "^19.0.10",
    "eslint": "^9.21.0",
    "parcel": "^2.13.3",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "exports": {
      "./main": {
        "import": "./dist/main/main.js",
        "require": "./dist/main/main.js",
        "types": "./src/main/main.ts"
      },
      "./preview": {
        "import": "./src/preview/preview.js",
        "require": "./src/preview/preview.js",
        "types": "./src/preview/preview.ts"
      },
      "./style.css": "./src/styles/index.css"
    }
  },
  "targets": {
    "main": {
      "distDir": "./dist/main",
      "source": "./src/main.ts",
      "sourceMap": true,
      "isLibrary": true,
      "engines": {
        "node": ">=20"
      }
    },
    "main-types": {
      "distDir": "./dist/main",
      "source": "./src/main.ts",
      "sourceMap": false,
      "isLibrary": true
    },
    "preview": {
      "distDir": "./dist/preview",
      "source": "./src/preview.ts",
      "sourceMap": true,
      "isLibrary": true,
      "includeNodeModules": {
        "storybook": false
      },
      "engines": {
        "node": ">=20"
      }
    },
    "preview-types": {
      "distDir": "./dist/preview",
      "source": "./src/preview.ts",
      "sourceMap": false,
      "isLibrary": true
    }
  }
}
