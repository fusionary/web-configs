{
  "name": "@fusionary/storybook-config",
  "version": "7.0.4",
  "private": false,
  "description": "Baseline storybook config used and maintained by Fusionary.",
  "repository": {
    "type": "git",
    "url": "https://github.com/fusionary/web-configs.git",
    "directory": "packages/storybook"
  },
  "license": "MIT",
  "author": "Fusionary <developers@fusionary.com> (https://fusionary.com)",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./style.css": "./src/styles/index.css"
  },
  "module": "./dist/index.mjs",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/styles/index.css"
  ],
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "parcel watch",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ./.prettierignore",
    "lint": "eslint .",
    "prepack": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@fusionary/prettier-config",
  "dependencies": {
    "@storybook/addon-a11y": "^10.0.0",
    "@storybook/addon-designs": "^11.0.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/addon-links": "^10.0.0",
    "@storybook/nextjs-vite": "^10.0.0",
    "@storybook/react": "^10.0.0",
    "storybook": "^10.0.0",
    "storybook-addon-tag-badges": "^3.0.1"
  },
  "devDependencies": {
    "@fusionary/eslint-config": "workspace:*",
    "@fusionary/prettier-config": "workspace:*",
    "@fusionary/tsconfig": "workspace:*",
    "@parcel/config-default": "^2.15.4",
    "@parcel/transformer-typescript-types": "^2.15.4",
    "@types/node": "^22.18.4",
    "@types/react": "^19.1.13",
    "eslint": "^9.35.0",
    "parcel": "^2.15.4",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  }
}
