{
  "name": "@fusionary/storybook-config",
  "version": "7.0.0",
  "private": false,
  "description": "Baseline storybook config used and maintained by Fusionary.",
  "repository": {
    "type": "git",
    "url": "https://github.com/fusionary/web-configs.git",
    "directory": "packages/storybook"
  },
  "license": "MIT",
  "author": "Fusionary <developers@fusionary.com> (https://fusionary.com)",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "exports": {
    "./main": "./src/main.ts",
    "./preview": "./src/preview.ts",
    "./style.css": "./src/styles/index.css"
  },
  "files": [
    "dist",
    "src/styles/index.css"
  ],
  "scripts": {
    "build": "parcel build",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "parcel watch",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ./.prettierignore",
    "lint": "eslint .",
    "prepack": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@fusionary/prettier-config",
  "dependencies": {
    "@storybook/addon-a11y": "^10.0.0",
    "@storybook/addon-designs": "^11.0.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/addon-links": "^10.0.0",
    "@storybook/nextjs-vite": "^10.0.0",
    "@storybook/react": "^10.0.0",
    "storybook": "^10.0.0",
    "storybook-addon-tag-badges": "^3.0.1"
  },
  "devDependencies": {
    "@fusionary/eslint-config": "workspace:*",
    "@fusionary/prettier-config": "workspace:*",
    "@fusionary/tsconfig": "workspace:*",
    "@parcel/config-default": "^2.15.4",
    "@parcel/transformer-typescript-types": "^2.15.4",
    "@types/node": "^22.18.4",
    "@types/react": "^19.1.13",
    "eslint": "^9.35.0",
    "parcel": "^2.15.4",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "exports": {
      "./main": {
        "types": "./dist/main/main.d.ts",
        "import": "./dist/main/main.js",
        "require": "./dist/main/main.js"
      },
      "./preview": {
        "types": "./dist/preview/preview.d.ts",
        "import": "./dist/preview/preview.js",
        "require": "./dist/preview/preview.js"
      },
      "./style.css": "./src/styles/index.css"
    }
  },
  "main-types": "./dist/main/main.d.ts",
  "preview-types": "./dist/preview/preview.d.ts",
  "targets": {
    "main": {
      "distDir": "./dist/main",
      "source": "./src/main.ts",
      "sourceMap": true,
      "isLibrary": true,
      "engines": {
        "node": ">=22"
      }
    },
    "main-types": {
      "distDir": "./dist/main",
      "source": "./src/main.ts",
      "sourceMap": false,
      "isLibrary": true
    },
    "preview": {
      "distDir": "./dist/preview",
      "source": "./src/preview.ts",
      "sourceMap": true,
      "isLibrary": true,
      "includeNodeModules": {
        "storybook": false
      },
      "engines": {
        "node": ">=22"
      }
    },
    "preview-types": {
      "distDir": "./dist/preview",
      "source": "./src/preview.ts",
      "sourceMap": false,
      "isLibrary": true
    }
  }
}
